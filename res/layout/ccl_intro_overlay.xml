<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/textTitle"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/ccl_intro_text_margin"
        android:layout_marginLeft="@dimen/ccl_intro_text_margin"
        android:layout_marginRight="@dimen/ccl_intro_text_margin"
        android:layout_marginEnd="@dimen/ccl_intro_text_margin"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Touch this icon to cast videoes to your TV"
        android:textAlignment="center"
        android:textSize="14pt"
        android:gravity="center_horizontal"
        android:textAppearance="@style/TextAppearance.CCLIntroOverlay.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_cast_white_big"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/textTitle"
        android:gravity="center"
        android:scaleType="fitCenter"
        android:layout_marginBottom="70dp"
        />

    <TextView
        android:id="@+id/textSubtitle"
        android:layout_below="@+id/textTitle"
        android:layout_alignLeft="@+id/textTitle"
        android:layout_alignRight="@+id/textTitle"
        android:layout_alignStart="@+id/textTitle"
        android:layout_alignEnd="@+id/textTitle"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.CCLIntroOverlay.Subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/button_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"
        android:layout_marginRight="@dimen/ccl_intro_button_margin_right"
        android:layout_marginEnd="@dimen/ccl_intro_button_margin_right"
        android:layout_marginTop="50dp"
        >
        <!--<Button-->
            <!--android:id="@+id/button"-->
            <!--style="@style/Widget.AppCompat.Button.Colored"-->

            <!--android:textAppearance="@style/TextAppearance.CCLIntroOverlay.Button"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"/>-->
    </RelativeLayout>

</RelativeLayout>